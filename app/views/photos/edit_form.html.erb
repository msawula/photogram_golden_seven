<h1>Edit photo</h1>

<form action ="/update_photo/<%= params[:id]%>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= Photo.find_by({ :id => params[:id]}).caption%>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= Photo.find_by({ :id => params[:id]}).source%>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
